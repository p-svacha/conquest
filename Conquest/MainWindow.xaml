<Window x:Class="Conquest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conquest"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1300">

    <Border Name="MainBorder" Padding="10">
        <StackPanel>
            <Grid Name="Header">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Margin="10 10 10 10" Grid.Column="0" Content="Random Small"></Button>
                <Button Margin="10 10 10 10" Grid.Column="1" Content="Random Medium"></Button>
                <Button Margin="10 10 10 10" Grid.Column="2" Content="Random Big"></Button>
                <Label Margin="10 10 10 10" Grid.Column="3" Name="CoordinatesLabel" Content="D" HorizontalAlignment="Center"></Label>
            </Grid>
            <DockPanel Width="1200" Height="800" Name="Map">
                
            </DockPanel>
        </StackPanel>
    </Border>
</Window>
